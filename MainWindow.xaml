<Window x:Class="TusindfrydWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TusindfrydWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Grid>

        <ListBox x:Name="lbFlowerSorts" Margin="97,40,97,71">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Margin="1" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Blomstersorter" HorizontalAlignment="Center" Margin="0,14,0,0" VerticalAlignment="Top"/>
        <Button Content="Opret Blomstersort" Margin="0,174,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
